# LSM3 Frontend Environment Configuration
# Create a .env file in the frontend directory with these variables

# ==================== API CONFIGURATION ====================
# Backend API URL - Update this to your deployed backend URL
# Production Example:
VITE_API_URL=https://api.yourdomain.com

# Local Development Example (default):
# VITE_API_URL=http://localhost:3000

# ==================== APP CONFIGURATION ====================
VITE_APP_NAME=LSM3 Portal
VITE_APP_VERSION=1.0.0

# ==================== FEATURES ====================
# Enable/disable features
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_MESSAGING=true
VITE_ENABLE_ANALYTICS=true

# ==================== EXTERNAL SERVICES ====================
# Google Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking (optional)
VITE_SENTRY_DSN=https://your-sentry-url@sentry.io/project-id

# ==================== DEVELOPMENT ====================
# Uncomment for development
# VITE_DEBUG=true
